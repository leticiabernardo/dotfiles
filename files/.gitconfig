[alias]
	s = status
	co = checkout
	a = add .
	cp = cherry-pick
	cm = commit -m 
	gd = diff
	pf = push -f
	reb = "!r() { git rebase -i HEAD~$1; }; r"
	d = !"git diff-index --quiet HEAD -- || clear; git diff --patch-with-stat"
	graph = log --graph --decorate

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
